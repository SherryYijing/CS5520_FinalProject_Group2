<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserProfileFragment">

    <ImageButton
        android:id="@+id/userProfilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/userNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/userNameTextView"
        app:layout_constraintStart_toStartOf="@+id/userNameTextView"
        tools:src="@drawable/select_avatar" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/timeTableButton"
        app:layout_constraintEnd_toEndOf="@+id/timeTableButton"
        app:layout_constraintStart_toStartOf="@+id/timeTableButton" />

    <Button
        android:id="@+id/timeTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GoToMyTimeTable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/Logout"
        app:layout_constraintEnd_toEndOf="@+id/timeTableButton"
        app:layout_constraintStart_toStartOf="@+id/timeTableButton"
        app:layout_constraintTop_toBottomOf="@+id/timeTableButton" />
</androidx.constraintlayout.widget.ConstraintLayout>